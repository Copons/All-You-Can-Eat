{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": ["plugin:react/recommended"],
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules" : {
    "prefer-const" : 2,
    "no-const-assign" : 2,
    "no-var" : 2,
    "no-new-object" : 2,
    "object-shorthand" : 2,
    "quote-props" : [2, "as-needed"],
    "no-array-constructor" : 2,
    "quotes" : [2, "single"],
    "prefer-template" : 2,
    "no-loop-func" : 2,
    "no-param-reassign" : [2, { "props" : true }],
    "prefer-arrow-callback" : 2,
    "arrow-spacing" : 2,
    "arrow-parens" : [2, "as-needed"],
    "arrow-body-style" : [2, "as-needed"],
    "no-iterator" : 2,
    "dot-notation" : 2,
    "one-var" : [2, "never"],
    "eqeqeq" : 2,
    "no-case-declarations" : 2,
    "no-nested-ternary" : 2,
    "no-unneeded-ternary" : 2,
    "brace-style" : 2,
    "indent" : [2, 2, { "SwitchCase" : 1 }],
    "space-before-blocks" : 2,
    "keyword-spacing" : [2, { "before" : true, "after" : true}],
    "space-infix-ops" : 2,
    "padded-blocks" : [2, "never"],
    "space-in-parens" : [2, "never"],
    "array-bracket-spacing" : [2, "never"],
    "object-curly-spacing" : [2, "always"],
    "max-len" : [2, 100, 2],
    "comma-style" : 2,
    "comma-dangle" : [2, "always-multiline"],
    "semi" : 2,
    "radix" : 2,
    "camelcase" : 2,
    "no-underscore-dangle" : 2,

    "no-shadow" : 2,
    "no-shadow-restricted-names" : 2,
    "no-unused-vars" : [2, {
      "vars" : "local",
      "args" : "after-used"
    }],
    "no-constant-condition" : 2,
    "no-dupe-keys" : 2,
    "no-duplicate-case" : 2,
    "no-empty" : 2,
    "no-empty-character-class" : 2,
    "no-extra-semi" : 2,
    "no-func-assign" : 2,
    "no-inner-declarations" : 2,
    "no-invalid-regexp" : 2,
    "no-irregular-whitespace" : 2,
    "no-negated-in-lhs" : 2,
    "no-new-require" : 2,
    "no-obj-calls" : 2,
    "no-path-concat" : 2,
    "no-regex-spaces" : 2,
    "no-sparse-arrays" : 2,
    "no-unreachable" : 2,
    "use-isnan" : 2,
    "valid-typeof" : 2,
    "no-eq-null" : 2,
    "no-eval" : 2,
    "no-fallthrough" : 2,
    "no-floating-decimal" : 2,
    "no-native-reassign" : 2,
    "no-return-assign" : 2,
    "no-script-url" : 2,
    "no-self-compare" : 2,
    "no-sequences" : 2,
    "no-undef" : 2,
    "no-undef-init" : 2,
    "no-undefined" : 2,
    "no-with" : 2,
    "eol-last" : 2,
    "new-parens" : 2,
    "no-multiple-empty-lines" : [2, { "max" : 4 }],
    "no-trailing-spaces" : 2,
    "no-extra-parens" : 2
  }

}
